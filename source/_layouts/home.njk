{#- Let's list out _only_ the presentations on the site. This will exclude any
    style guide or pages from the output here.
-#}

{#- The navigation is set to include all presentations in the source -#}
{% set nav_presentation = collections.presentation | eleventyNavigation() %}

{%- if nav_presentation -%}
  <nav class="nav-presentation" aria-label="Sample Presentations">
    <ul role="list">
      {%- for presentation in nav_presentation %}
        <li><a href="{{- presentation.url -}}">{{- presentation.title -}}</a></li>
      {%- endfor %}
    </ul>
  </nav>
{%- endif -%}

{{- content | safe -}}
