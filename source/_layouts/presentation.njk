---
layout: default
class: presentation
---

{%- from 'reveal.njk' import reveal with context -%}

<div class="reveal">
  <div class="slides">
    <section>
      <h1 class="presentation-title">{{- title -}}</h1>
    </section>

    <section data-markdown>
      <textarea data-template>
        {{- content | safe -}}
      </textarea>
    </section>
  </div>
</div>

{{- reveal(slides) -}}
