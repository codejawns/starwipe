---
layout: base.njk
---

<header class="header">
  <div class="header-inner">
    <a href="/">{{ site.name }}</a>

    {#- The navigation is set to include only pages in the source -#}
    {% set pages = collections.page | eleventyNavigation() %}

    {%- if pages -%}
      <nav>
        <ul>
          {%- for page in pages %}
            <li><a href="{{- page.url -}}">{{- page.title -}}</a></li>
          {%- endfor %}
        </ul>
      </nav>
    {%- endif -%}
  </div>
</header>

<main class="main">
  <div class="main-inner">
    <h1>{{- title -}}</h1>
    {{ content | safe }}
  </div>
</main>

<footer class="footer">
  <div class="footer-inner">
    <p>{{- site.name }}</p>
    <p>Reed Piernock, <a href="https://reedcodes.com/">ReedCodes.com</a></p>
    <p><a href="https://github.com/codejawns/starwipe">Check the project on GitHub</a>.</p>
  </div>
</footer>
